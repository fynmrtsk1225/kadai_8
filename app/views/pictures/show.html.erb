<p id="notice"><%= notice %></p>

<p>
  <strong>Image:</strong>
  <%= image_tag @picture.image.url %>
</p>

<p>
  <strong>Content:</strong>
  <%= @picture.content %>
</p>

<% unless @picture.user_id == current_user.id %>
  <% if @favorite.present? %>
    <%= link_to 'Remove Keep', favorite_path(id: @favorite.id),method: :delete, class: 'btn btn-danger' %>
  <% else %>
    <%= link_to 'Keep', favorites_path(picture_id: @picture.id), method: :post, class: 'btn btn-primary' %>
  <% end %>
<% end %>

<table>
  <tr>
    <% if @picture.user == current_user %>
      <td><%= link_to 'Edit', edit_picture_path(@picture) %> |</td>
    <% else %>
      <td></td>
    <% end %>
    <td><%= link_to 'Back', pictures_path %></td>
  </tr>
</table>
