<%= form.with (model: picture, local: true) do |f| %>

  <%= f.label :content %>
  <%= f.text_area :content %>

  <%= f.label :image %>
  <%= image_tag(picture.image.url) if picture.image && picture.image.url %>
  <%= f.file_field :image %>
  <%= f.hidden_field :image_cache %>

  <%= f.submit %>

<% end %>
